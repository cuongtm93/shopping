@model ShopBackend.Data.oc_product_description
<form class="form-horizontal">
    <div class="box-body">

        @*@if (ViewBag.Error != null)
        {
            <span class="alert-danger">ViewBag["Error"]</span>
        }*@

        <button type="submit" class="btn btn-danger  pull-right" formaction="" formmethod="post">Save</button>
        <div class="col-sm-2"></div>
        <a href="javascript:window.history.back();">
            <div type="submit" class="btn btn-info pull-right" style="margin-right:10px;">
                <i class="fa fa-arrow-left"></i>
            </div>
        </a>
    </div>
    <!-- /.box-footer -->
    <input type="hidden" name="case" value="product_description" />
    <input type="hidden" name="product_id" value="@Model.product_id" />
    <div class="box-body">
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label required">Tên sản phẩm</label>

            <div class="col-sm-10">
                <input type="text" required class="form-control" name="product_name" placeholder="Tên sản phẩm" value="@Model.name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Mô tả</label>

            <div class="col-sm-10">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">
                            CK Editor
                            <small>Advanced and full of features</small>
                        </h3>
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                        <!-- /. tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body pad" style="">
                        <textarea id="editor1" rows="10" cols="80" name="product_description">@Html.Raw(@Model.description)</textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label required">Tiêu đề thẻ meta</label>

            <div class="col-sm-10">
                <textarea rows="5" class="form-control" name="product_meta_title" placeholder="Tiêu đề thẻ meta">@Model.meta_title</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Mô tả thẻ meta</label>

            <div class="col-sm-10">
                <textarea rows="5" class="form-control" name="product_meta_description" placeholder="Mô tả thẻ meta">@Model.meta_description</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Từ khoá trong thẻ meta</label>

            <div class="col-sm-10">
                <textarea rows="5" class="form-control" name="product_meta_keyword" placeholder="Mô tả thẻ meta, cách nhau bằng dấu phẩy">@Model.meta_keyword</textarea>
            </div>
        </div>
    </div>
    <!-- /.box-body -->

</form>

<script>
    $(document).ready(function () {

        $(function () {
            // Replace the <textarea id="editor1"> with a CKEditor
            // instance, using default configuration.
            CKEDITOR.replace('editor1')
            //bootstrap WYSIHTML5 - text editor
            $('.textarea').wysihtml5()
        })
    });
</script>
