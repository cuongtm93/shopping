
@{
    ViewBag.Title = "Login";
}
<div class="row" style="margin-top : 100px;">
    
    <div class="col-md-4" style="width : 50%; margin : 0 auto; ">
        <h3 class="text-center">Đăng nhập</h3>
        <form action="@Url.Action("Login","Customer")" method="post">
            <div class="form-group">
                <i class="fa fa-user" style="position : absolute; top:51px;left:20px"></i>
                <input type="text" class="form-control" placeholder="Tên đăng nhập" required="required" name="username" style="padding-left : 30px;">
            </div>
            <div class="form-group">
                <i class="fa fa-lock" style="position : absolute; top:104px;left:20px"></i>
                <input type="password" class="form-control" placeholder="Mật khẩu" required="required" name="password" style="padding-left : 30px;">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary center btn-block" value="Đăng nhập">
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" style="margin-top : 10px;">
                    <strong>Lỗi !</strong> @ViewBag.Error
                </div>
            }
        </form>
    </div>
</div>




